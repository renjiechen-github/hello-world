<script src="/html/adminX/js/hdialog/js/jquery.hDialog.js"></script>
<script src="/html/adminX/js/bootstrap-jquery-confirm/jquery-confirm.js"></script>
<script src="/html/adminX/js/cookies/jquery.cookie.js"></script>
<script type="text/javascript">
	var username = $.cookie('username');
	var passWord = $.cookie('usernamep');
	if(username != null){
		$('#userName').val(username);
		$('#passWord').val(passWord);
	}
	
	$(window).keydown(function(e){
		if(e.keyCode == 13){
			login();
		}
	});
	
	//登录操作
	function login(){
		var userName = $('#userName').val();
		var passWord = $('#passWord').val();
		if(userName.trim() == ''){
			common.alert({
				msg:'请填写用户名。'
			});
			return;
		}
		if(passWord.trim() == ''){
			common.alert({
				msg:'请填写密码。'
			});
			return;
		}
		common.load.load('登录中');
		
		common.ajax({
			url: common.root+'/login/login.do?1=2',
			data:{
				passWord:b64_sha1(passWord),
				userName:userName
			},
			dataType: 'json',
			loadfun: function(isloadsucc, data){
				if(data.state == '1'){//登录成功
					$.cookie('username',userName,{expires:7,path:'/'});
					if($('#rememberme:checked').size() == 1){
						$.cookie('usernamep',passWord,{expires:7,path:'/'});
					}
					window.location.href="/html/index.html";
				}else if(data.state=='-2'){//用户名不存在
					common.load.hide();
					common.tip({
						msg:'用户名不存在'
					});
				}else if(data.state=='-3'){//密码不正确
					common.load.hide();
					common.tip({
						msg:'密码不正确'
					});
				}else if(data.state=='-5'){//密码不正确
					common.load.hide();
					common.tip({
						msg:'账号被锁定，请联系管理员。'
					});
				}else{//未知 错误
					common.load.hide();
					common.alert({
						msg:common.msg.error
					});
				}
			}
		});
	}
</script>
